<Window x:Class="UploadPicture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UploadPicture"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock Name="Txt1" Text="Upload Picture:" FontSize="25" Height="35" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>
            <Button Name="Btn" Content="Load" Height="30" Width="80" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Btn_Click"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Name="I1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="300" Width="400"/>
        </StackPanel>
    </Grid>
</Window>
